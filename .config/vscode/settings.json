// Place your settings in this file to overwrite the default settings
{
    // telemetry
    "telemetry.telemetryLevel": "off",
    "redhat.telemetry.enabled": false,

    // fonts
    "editor.fontFamily": "Cascadia Code",
    "editor.fontSize": 15,
    "editor.fontLigatures": true,
    "editor.fontWeight": "400",
    "editor.lineHeight": 21,
    // Disable minimap
    "editor.minimap.enabled": false,
    // Disable auto-autocomplete
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    // Disable preview mode
    "workbench.editor.enablePreview": false,
    // git
    "git.autofetch": true,

    "editor.roundedSelection": false,
    "editor.formatOnSave": false,
    "explorer.openEditors.visible": 0,
    "editor.renderWhitespace": "none",
    "editor.suggestSelection": "first",
    "files.trimTrailingWhitespace": true,
    "window.menuBarVisibility": "toggle",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // ------- Python -------
    "python.languageServer": "Pylance",
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "python.unitTest.pyTestEnabled": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.linting.mypyCategorySeverity.error": "Warning",
    "python.terminal.activateEnvInCurrentTerminal": true,

    // ------- C++ / Clang ------
    "clang-format.fallbackStyle": "WebKit",
    "clang-format.style": "{BreakBeforeBraces: Allman, Standard: Cpp11, IndentWidth: 4, UseTab: Never}",

    // ------- javascript -------
    "[javascript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.typescript-language-features",
    },
    // ------- typescript -------
    "[typescript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.typescript-language-features",
    },

    // ------- Insert DateTime -------
    "insertDateString.formatDate": "YYYY-MM-DD (DDD)",

}
